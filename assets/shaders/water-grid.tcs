#version 410 core

layout(vertices = 3) out; // Assume patches are triangles

in vec2 uv[];
out vec2 uv_out[];

void main() {
    // Pass input attributes to the next stage
    uv_out[gl_InvocationID] = uv[gl_InvocationID];

    // Set tessellation levels
    gl_TessLevelOuter[0] = 3.0f; // Edge 1
    gl_TessLevelOuter[1] = 3.0f; // Edge 2
    gl_TessLevelOuter[2] = 3.0f; // Edge 3
    gl_TessLevelInner[0] = 3.0f; // Center of the patch
}
